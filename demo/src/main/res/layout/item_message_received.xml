<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/text_message_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/default_text"
        android:textAlignment="center"
        android:textColor="@color/incomingMsgTimeText"
        android:textSize="12sp"
        android:visibility="gone" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/sender_photo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/text_message_date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/sender_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/chat_sent_message_margin"
        android:layout_marginLeft="@dimen/chat_sent_message_margin"
        android:text="@string/default_text"
        android:textColor="@color/sendingMsgText"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sender_name"
        android:layout_marginLeft="@dimen/chat_sent_message_margin"
        android:layout_marginStart="@dimen/chat_sent_message_margin"
        android:layout_marginTop="2dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/attached_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/text_message_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:background="@drawable/received_message_background"
            android:backgroundTint="@color/blue"
            android:maxWidth="240dp"
            android:textColor="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/message_body"
        android:layout_alignStart="@id/message_body"
        android:layout_alignLeft="@id/message_body"
        android:maxWidth="100dp"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:text="@string/default_text"
        android:textColor="@color/sendingMsgTimeText"
        android:textSize="12sp"
        tools:ignore="RtlSymmetry" />

    <ProgressBar
        android:id="@+id/sending_msg"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/message_body"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_toRightOf="@id/message_body"
        android:layout_toEndOf="@id/message_body"
        android:visibility="gone" />

</RelativeLayout>