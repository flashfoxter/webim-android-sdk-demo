<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_message_date"
        android:text="nov 12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="12sp"
        android:textAlignment="center"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/message_body"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sending_msg"
        android:layout_below="@id/text_message_date"
        android:layout_marginRight="4dp"
        android:layout_alignParentRight="true">

        <ImageView
            android:id="@+id/attached_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/text_message_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:maxWidth="240dp"
            android:padding="8dp"
            android:text="hello, hello!"
            android:textColor="@color/sendingMsgText" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_message_time"
        android:text="11:40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="40dp"
        android:textSize="12sp"
        android:layout_toLeftOf="@id/message_body"
        android:layout_alignBottom="@id/message_body"
        android:layout_marginRight="4dp" />

    <ProgressBar
        android:id="@+id/sending_msg"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/message_body"
        android:layout_alignBottom="@id/message_body"
        android:layout_marginRight="4dp"
        android:visibility="gone" />
</RelativeLayout>